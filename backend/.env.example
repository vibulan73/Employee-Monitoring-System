# Database Configuration
# Default: jdbc:postgresql://localhost:5432/employee_monitoring
DB_URL=jdbc:postgresql://localhost:5432/employee_monitoring
DB_USERNAME=postgres
DB_PASSWORD=your_password_here

# Server Port
# Default: 8080
PORT=8080

# Logging
LOG_LEVEL_APP=INFO
LOG_LEVEL_WEB=WARN

# Admin Emails (Comma separated)
ADMIN_EMAIL=admin@example.com
ADMIN_CC_EMAIL=cc@example.com
ADMIN_BCC_EMAIL=bcc@example.com

# Gmail API Paths
GMAIL_CREDENTIALS_PATH=src/main/resources/credentials.json
GMAIL_TOKENS_PATH=tokens

# Screenshot Storage
SCREENSHOT_PATH=./screenshots

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
